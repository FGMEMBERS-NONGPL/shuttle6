<?xml version="1.0"?>
<!--== Type 6 Shuttlecraft  version 15.0 ==-->

<PropertyList>
	<name>Tracking Callsign text</name>
	<background>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</background>
	<w>1280</w>
	<h>256</h>
	<instruments>
		<instrument>
			<name>Callsign Panel</name>
			<condition>
				<and>
					<property>sim/model/shuttle6/lighting/LCARS-panel</property>
					<property>sim/model/shuttle6/systems/power-switch</property>
					<property>instrumentation/tracking/enabled</property>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<w-base>1280</w-base>
			<h-base>256</h-base>
			<x>640</x>
			<y>128</y>
			<w>1280</w>
			<h>256</h>
			<layers>
				<layer>
					<name>text line green ap1</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>96</point-size>
					<color>
						<red>0.1</red>
						<green>1</green>
						<blue>0.1</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/tracking/ap1-callsign</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>128</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>36</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>text line red ap2</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>96</point-size>
					<color>
						<red>1</red>
						<green>0.1</green>
						<blue>0.1</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/tracking/ap2-callsign</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-640</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>36</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>text line white ai1</name>
					<type>text</type>
					<condition>
						<greater-than>
							<property>instrumentation/tracking/ai1-distance-m</property>
							<value>-999990</value>
						</greater-than>
					</condition>
					<font>arial_black</font>
					<point-size>96</point-size>
					<color>
						<red>0.9</red>
						<green>0.9</green>
						<blue>0.9</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/tracking/ai1-callsign</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-640</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-46</offset>
						</transformation>
					</transformations>
				</layer>

				<layer>
					<name>text line cyan mp1</name>
					<type>text</type>
					<condition>
						<greater-than>
							<property>instrumentation/tracking/mp1-distance-m</property>
							<value>-999990</value>
						</greater-than>
					</condition>
					<font>arial_black</font>
					<point-size>96</point-size>
					<color>
						<red>0.04</red>
						<green>0.9</green>
						<blue>0.9</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/tracking/mp1-callsign</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-640</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-128</offset>
						</transformation>
					</transformations>
				</layer>
			</layers>
		</instrument>
	</instruments>
</PropertyList>
